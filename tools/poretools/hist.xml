<tool id="poretools_hist" name="hist" version="@TOOL_VERSION@.0">
    <description>Plot a histogram of read sizes</description>
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="requirements" />
    <expand macro="version_command" />
    <command detect_errors="aggressive"><![CDATA[
mkdir fast5files &&

#for $f in $fast5in
    ln -s '$f' 'fast5files/${f.name}' &&
#end for

poretools hist
--saveas 'output.$output_format'
--min-length $min_length
--max-length $max_length
--num-bins $num_bins
$theme_bw
fast5files/
    ]]></command>
    <inputs>
        <param name="fast5in" type="data" format="h5" multiple="true" label="Fast5 files" />
        <param name="min_length" argument="--min-length" type="integer" value="0" min="0" label="Minimum read length to be included in histogram" />
        <param name="max_length" argument="--max-length" type="integer" value="1000000000" min="0" label="Maximum read length to be included in histogram" />
        <param name="num_bins" argument="--num-bin" type="integer" value="50" min="0" label="Number of histogram bins" />
        <expand macro="theme_bw_param" />
        <expand macro="output_format_param" />
    </inputs>
    <outputs>
        <data name="histogram_png" format="png" from_work_dir="output.png" label="${tool.name} on ${on_string}: histogram (png)" >
            <filter> output_format == 'png' </filter>
        </data>
        <data name="histogram_pdf" format="pdf" from_work_dir="output.pdf" label="${tool.name} on ${on_string}: histogram (pdf)" >
            <filter> output_format == 'pdf' </filter>
        </data>
    </outputs>
    <tests>
        <test>
            <param name="fast5in" value="test.fast5,test2.fast5"/>
            <output name="histogram_png" file="histogram.png" ftype="png" compare="sim_size"/>
        </test>
        <test>
            <param name="fast5in" value="test.fast5,test2.fast5"/>
            <param name="output_format" value="pdf" />
            <param name="min_length" value="500" />
            <param name="num_bins" value="3" />
            <output name="histogram_pdf" file="histogram.pdf" ftype="pdf" compare="sim_size"/>
        </test>
    </tests>
    <help><![CDATA[
@HELP_GENERAL@

**Command Documentation**

lot read size histogram for a set of FAST5 files

For more information about this command, see command_doc_

.. _command_doc: http://poretools.readthedocs.io/en/latest/content/examples.html#poretools-hist
    ]]></help>
    <expand macro="citations"/>
</tool>
